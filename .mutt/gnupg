# GnuPG configuration
#set pgp_sign_micalg=pgp-sha1 # default for DSS keys
set pgp_decode_command="gpg --quiet --batch --no-verbose --output - %f"
set pgp_verify_command="gpg --quiet --batch --no-verbose --output - --verify %s %f"
#set pgp_verify_command="gpg --batch --output - --verify %s %f"
set pgp_decrypt_command="gpg --quiet --batch --no-verbose --output - %f"
set pgp_sign_command="gpg --quiet --batch --no-verbose --output -  --armor --detach-sign --textmode %?a?-u %a? %f"
set pgp_clearsign_command="gpg --quiet --batch --no-verbose --output -  --armor --textmode --clearsign %?a?-u %a? %f"
set pgp_encrypt_only_command="/usr/lib/mutt/pgpewrap gpg -v --output - --encrypt --textmode --armor --always-trust -- -r %r -- %f"
set pgp_encrypt_sign_command="/usr/lib/mutt/pgpewrap gpg  -v --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust -- -r %r -- %f"
set pgp_import_command="gpg --no-verbose --import -v %f"
set pgp_export_command="gpg --no-verbose --export --armor %r"
set pgp_verify_key_command="gpg --no-verbose --fingerprint --check-sigs %r"
set pgp_list_pubring_command="gpg --no-verbose --with-colons --list-keys %r" 
set pgp_list_secring_command="gpg --no-verbose --with-colons --list-secret-keys %r" 
set pgp_getkeys_command=""

set pgp_good_sign="^gpg: good signature"
set pgp_use_gpg_agent=yes

set pgp_auto_decode=yes