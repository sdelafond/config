## ==================================================
## Colorizing the body of messages (ie in the pager)
## ==================================================
color normal      color244       default  # pager body

#  Coloring quoted text - coloring the first 7 levels:
color quoted      color22        default
color quoted1     color36        default
color quoted2     color50        default
color quoted3     color58        default
color quoted4     color72        default
color quoted5     color86        default
color quoted6     color166       default
color quoted7     color174       default

#  match ftp/http addresses:
color body 	  color190	 default   "(f|ht)tps?://[^ ]*"
#  match email addresses:
color body	  brightgreen	 default   "[[:alnum:]][-+.#_[:alnum:]]*@[-+.[:alnum:]]*[[:alnum:]]"
# match smileys
color body        yellow       default   "[;:][-]?[)/(|>\\]+"
#color body       yellow       default   "[;:][)/(|>\\]"

#  Remember:  Order counts!  The last matching rule "wins".
#  So we'll start with some general rules first:
color index 	  color244   	 default ~R
color index       color154	 default ~O # Old

color index 	  color141       default '(~L (maudet\|lbrowne\|bouchare\|stanley\|415\-?conseil\|metavize\|untangle\|hsbc\|gorry\|regnie\|jurica))'
color index 	  color034       default '(~L @.*debian)'
color index 	  color204       default '(~L @.*(mappy\|ysance))'
color index 	  color196       default '~((~C (security\.debian\.org\|vendor-sec\|buildd\+logs-security)) | (~s rt\.debian\.org))'

color index       brightcolor154 default ~N # New
color index 	  brightcolor141 default '~N (~L (maudet\|lbrowne\|bouchare\|stanley\|415\-?conseil\|metavize\|untangle\|hsbc\|gorry\|regnie\|jurica))'
color index 	  brightcolor034 default '~N (~L @.*debian)'
color index 	  brightcolor197 default '~N (~L @.*(mappy\|ysance))'
color index 	  brightcolor196 default '~N ~((~C (security\.debian\.org\|vendor-sec\|buildd\+logs-security)) | (~s rt\.debian\.org))'

color index       brightcolor230 default  ~F # Flagged
color index       default        color021 ~T # Tagged
color index       color139       default  ~D # Deleted
