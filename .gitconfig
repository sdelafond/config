[alias]
        bl2 = log --graph --branches --abbrev-commit --pretty=oneline --decorate=full
        bl = log --graph --branches --pretty=format:'%C(magenta)%h%C(reset) -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
        br = branch
	co = checkout
        ca = commit --verbose --amend
        c = commit --verbose
        cm = commit --verbose
        comm = commit --verbose
#        ps = log --pretty=oneline $(git push -n |& tail -1 | nth 1)
	st = status
        stat = status
        pull = pull --rebase
[branch]
        autosetuprebase = always
#        master.rebase = true
[color]
	ui = true
[color.diff]
        frag = magenta bold
#        func = white
        old = red bold
        new = green bold
[color.branch]
        current = green bold
        local = white bold
        remote = red bold
[color.interactive]
        prompt = white bold
[color.status]
        changed = magenta bold
        added = green bold
        untracked = cyan bold
[commit]
        template = ~/.gittemplate
[core]
	excludesfile = ~/.gitignore
        warnambiguousrefs = false
[diff "odf"]
        textconv=odt2txt
[gc]
        auto=0
[merge]
	conflictstyle = diff3
