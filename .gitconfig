[alias]
	a = add
	aa = add --all
        bl2 = log --graph --branches --abbrev-commit --pretty=oneline --decorate=full
        bl = log --graph --branches --pretty=format:'%C(magenta)%h%C(reset) -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
        bl1 = log --graph --pretty=format:'%C(magenta)%h%C(reset) -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
        b = branch
        ba = branch -a
        bl = branch -l
        br = branch -r
	co = checkout
        cb = checkout -b
        c = commit
        ca = commit --all
        cam = commit --amend
        camn = commit --amend --no-edit
        cp = cherry-pick
        d = diff
        dc = diff --cached
	dst = diff --stat
	f = fetch
	fa = fetch --all
	fo = fetch origin
#        ps = log --pretty=oneline $(git push -n |& tail -1 | nth 1)
        g = grep
	l1 = log --pretty=oneline
	l = log
	m = merge
	ma = merge --abort
	mrb = "!sh -c \"git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2\" -"
	mr = "!sh -c \"git fetch $1 merge-requests/$2/head && git checkout FETCH_HEAD\""
        p = push
	pr = pull --rebase
	r = rebase
	re = remote
	ra = rebase --abort
	rc = rebase --continue
	rh = reset --hard
	ri = rebase --interactive
	s = status
	sh = show
	sst = show --stat
[branch]
        autosetupmerge = always
#        autosetuprebase = always
#        master.rebase = true
[color]
	ui = true
[color.diff]
        frag = magenta bold
#        func = white
        old = red bold
        new = green bold
[color.branch]
        current = green bold
        local = white bold
        remote = red bold
[color.interactive]
        prompt = white bold
[color.status]
        changed = magenta bold
        added = green bold
        untracked = cyan bold
[commit]
        template = ~/.gittemplate
	verbose = true
[core]
	excludesfile = ~/.gitignore
        warnambiguousrefs = false
[diff "odf"]
        textconv=odt2txt
[gc]
        auto=0
[merge]
	conflictstyle = diff3
#[push]
#        default = upstream
[push]
	default = current
[url "git://git.debian.org/d-i/"]
	insteadOf = git+ssh://git.debian.org/git/d-i/

[magit]
	hideCampaign = true
[user]
	signingkey = 0x91AD581ADAF6CE93
[gitlab "salsa.debian.org/api/v4"]
	user = seb
