[alias]
        bl = log --graph --abbrev-commit --pretty=oneline --decorate=full
        br = branch
	co = checkout
#        ps = log --pretty=oneline $(git push -n |& tail -1 | nth 1)
	stat = status
[branch]
        autosetuprebase = always
#        master.rebase = true
[color]
	ui = true
[color.diff]
        frag = magenta bold
#        func = white
        old = red bold
        new = green bold
[color.branch]
        current = green bold
        local = white bold
        remote = red bold
[color.interactive]
        prompt = white bold
[color.status]
        changed = magenta bold
        added = green bold
        untracked = cyan bold
[commit]
        template = ~/.gittemplate
[core]
	excludesfile = ~/.gitignore
        warnambiguousrefs = false
[diff "odf"]
        textconv=odt2txt
[gc]
        auto=0
[merge]
	conflictstyle = diff3

